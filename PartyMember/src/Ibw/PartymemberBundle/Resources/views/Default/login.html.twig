{% extends '::base.html.twig' %}
{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/ibwpartymember/css/style.css') }}">

<link href="{{ asset('bundles/ibwpartymember/css/font-awesome/css/font-awesome.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
{{parent()}}


        <div class="container">
			<header>
			
				<h1><strong>党建信息系统</strong></h1>
				<h2>复旦大学数学科学学院</h2>

				
			</header>

				<form class="form-1" action="{{ path('login_check') }}" method="post">
					<p class="field">
						<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username or email">
						<i class="fa fa-user fa-large"></i>
					</p>
						<p class="field">
							<input type="password" id="password" name="_password" placeholder="Password">
							<i class="fa fa-lock fa-large"></i>
					</p>
					<p class="submit">
						<button type="submit" name="submit"><i class="fa fa-arrow-right fa-large"></i></button>
					</p>
				</form>
				
{% if error %}
    <div class="error">登陆错误:{{ error.message }}!!</div>
{% endif %}
	</div>
{% endblock %}